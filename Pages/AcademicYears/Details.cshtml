@page
@model nscccoursemap_tillyjay.Pages_AcademicYears.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Academic Year</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicYear.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicYear.Title)
        </dd>
    </dl>
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicYear.Semesters)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var item in Model.AcademicYear.Semesters)
                {
                    <li>@item.Name</li>
                }
            </ul>
        </dd>
    </dl>
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicYear.DiplomaYearSections.First().AdvisingAssignment)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var item in Model.AcademicYear.DiplomaYearSections.OrderBy(dys => dys.DiplomaYear.Diploma.Title))
                {
                    <li>
                        @item.DiplomaYear.Diploma.Title -
                        @item.DiplomaYear.Title - 
                        @item.AdvisingAssignment.Instructor.FullName
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.AcademicYear.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
