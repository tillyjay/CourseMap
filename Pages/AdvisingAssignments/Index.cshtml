    ViewData["Title"] = "Index";
}

<h1>Advising Assignments</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdvisingAssignment[0].Instructor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdvisingAssignment[0].DiplomaYearSection)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.AdvisingAssignment[0].DiplomaYearSection.DiplomaYear.Diploma)
