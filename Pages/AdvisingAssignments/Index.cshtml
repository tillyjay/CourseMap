                @Html.DisplayFor(modelItem => item.DiplomaYearSection.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiplomaYearSection.DiplomaYear.Diploma.Title)
            </td>
                            <td>
                @Html.DisplayFor(modelItem => item.DiplomaYearSection.DiplomaYear.Title)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
