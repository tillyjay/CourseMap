@page
@model nscccoursemap_tillyjay.Pages_CourseOfferings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Course Offering</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CourseOffering.SemesterId" class="control-label">Semester</label>
                <select asp-for="CourseOffering.SemesterId" class ="form-control" asp-items="ViewBag.SemesterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CourseOffering.DiplomaYearSectionId" class="control-label">Diploma</label>
                <select asp-for="CourseOffering.DiplomaYearSectionId" class ="form-control" asp-items="ViewBag.DiplomaYearSectionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CourseOffering.InstructorId" class="control-label">Instructor</label>
                <select asp-for="CourseOffering.InstructorId" class ="form-control" asp-items="ViewBag.InstructorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CourseOffering.CourseId" class="control-label">Course</label>
                <select asp-for="CourseOffering.CourseId" class ="form-control" asp-items="ViewBag.CourseId"></select>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CourseOffering.IsDirectedElective" /> @Html.DisplayNameFor(model => model.CourseOffering.IsDirectedElective)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
