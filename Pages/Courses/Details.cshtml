@page
@model nscccoursemap_tillyjay.Pages_Courses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.CourseCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Title)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Prerequisites)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Course.Prerequisites != null && Model.Course.Prerequisites.Any())
            {
                <ul style="list-style-type: none; padding-left: 0; margin-left: 0;">
                    @foreach (var item in Model.Course.Prerequisites)
                    {
                        <li style="margin-left: 0; padding-left: 0;">
                            @item.Prerequisite.CourseCode - @item.Prerequisite.Title
                        </li>
                    }
                </ul>
            }
            else
            {
                <span>None</span>
            }


            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Course.IsPrerequisiteFor)
            </dt>
            <dd class="col-sm-10">
                @if (Model.Course.IsPrerequisiteFor != null && Model.Course.IsPrerequisiteFor.Any())
                {
                    <ul style="list-style-type: none; padding-left: 0; margin-left: 0;">
                        @foreach (var item in Model.Course.IsPrerequisiteFor)
                        {
                            <li>
                                @item.Course.CourseCode - @item.Course.Title
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <span>None</span>
                }
</dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Course.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
