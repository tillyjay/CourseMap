@model nscccoursemap_tillyjay.Pages_Instructors.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Instructor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.LastName)
        </dd>
            <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.AdvisingAssignments)
        </dt>
        <dd class="col-sm-10">
              <ul>
                @foreach (var item in Model.Instructor.AdvisingAssignments)
                {
                    <li>
                        @item.Id -
                        @item.DiplomaYearSection.DiplomaYear.Title -
                        @item.DiplomaYearSection.Title -
                        @item.DiplomaYearSection.DiplomaYear.Diploma.Title  

                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
