@page
@model nscccoursemap_tillyjay.Pages_Semesters.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Semester</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.AcademicYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.AcademicYear.Title)
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.CourseOfferings)
        </dt>
        <dd class="col-sm-10">
        <ul>
            @foreach (var item in Model.Semester.CourseOfferings)
            {
                <li>@item.Course.CourseCode - @item.Course.Title -
                    @item.DiplomaYearSection.AdvisingAssignment.Instructor.FullName -
                    @(item.IsDirectedElective ? "Directed Elective" : "Not Directed Elective")
                </li>
            }
        </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Semester.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
